		<form id="registrationForm" action="${pageContext.request.contextPath}/signup" method="post"
			class="signin">
			<div class="content">
				<h2>Registration</h2>
				<div class="form">
					<div class="inputBox">
						<input type="text" id="username" name="username" required>
						<i>Username</i> 
						
						<c:if test="${not empty userNameError}">
							<span id="usernameError" class="error">
								<small style="color: red">${userNameError}</small>
							</span>
							<c:remove var="userNameError" scope="session"/>
						</c:if>
						
					</div>
					<div class="inputBox">
						<input type="email" id="email" name="email" required> <i>Email</i>
						<c:if test="${not empty emailError}">
							<span id="usernameError" class="error">
								<small style="color: red">${emailError}</small>
							</span>
							<c:remove var="emailError" scope="session"/>
						</c:if>
					</div>
					<div class="inputBox">
						<input type="password" id="password" name="password" required>
						<i>Password</i>         
						<span id="passwordError" class="error" aria-live="polite"></span>

						
					</div>
					<div class="inputBox">
						<input type="password" id="confirmPassword" name="confirmPassword"
							required> <i>Confirm Password</i> 
							<span id="confirmPasswordError" class="error" aria-live="polite"></span> <!-- Confirm password error container -->
							
					</div>
					<div class="links">
						<a href="#">Already have an Account?</a> <a href="${pageContext.request.contextPath}/login">Login</a>
					</div>
					<div class="inputBox">
						<input type="submit" value="Register">
					</div>
				</div>
			</div>
